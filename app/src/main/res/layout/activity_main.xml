             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_weight="1"
             android:text="6"
             android:textSize="30sp"/>

         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/buttonOpMinus"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
